{
  "name": "cccc",
  "version": "1.0.14",
  "description": "CC Catalog Application",
  "type": "module",
  "main": "dist-electron/main/index.js",
  "scripts": {
    "predev": "node -e \"require('fs').mkdirSync('dist-electron/main', {recursive: true})\"",
    "dev": "npm run predev && vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "lint": "eslint src --ext .ts,.tsx",
    "format": "prettier --write \"src/**/*.{ts,tsx,css,md}\"",
    "dist": "npm run build && electron-builder"
  },
  "build": {
    "appId": "com.bruno.cccatalog",
    "productName": "CC Catalog",
    "directories": {
      "output": "release/${version}"
    },
    "files": [
      "dist-electron",
      "dist",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "public/sims-cc.db",
        "to": "sims-cc.db"
      }
    ],
    "win": {
      "icon": "public/favicon.png",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "artifactName": "${productName}-Setup-${version}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "CC Catalog"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "devbrunoflorian",
        "repo": "CC-Catalog"
      }
    ]
  },
  "keywords": [],
  "author": "Bruno Florian",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/devbrunoflorian/CC-Catalog.git"
  },
  "homepage": "https://github.com/devbrunoflorian/CC-Catalog#readme",
  "devDependencies": {
    "@types/adm-zip": "^0.5.7",
    "@types/node": "^25.2.2",
    "@types/react": "^19.2.13",
    "@types/react-dom": "^19.2.3",
    "@types/sql.js": "^1.4.9",
    "@types/yauzl": "^2.10.3",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "@vitejs/plugin-react": "^5.1.3",
    "autoprefixer": "^10.4.24",
    "electron": "^40.2.1",
    "electron-builder": "^26.7.0",
    "eslint": "^9.9.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.5",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "postcss": "^8.5.6",
    "prettier": "^3.8.1",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.9.3",
    "vite": "^7.3.1",
    "vite-plugin-electron": "^0.29.0",
    "vite-plugin-electron-renderer": "^0.14.6"
  },
  "dependencies": {
    "@tailwindcss/vite": "^4.1.18",
    "adm-zip": "^0.5.16",
    "drizzle-orm": "^0.38.3",
    "electron-updater": "^6.7.3",
    "lucide-react": "^0.474.0",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "sql.js": "^1.12.0",
    "yauzl": "^3.2.0"
  }
}